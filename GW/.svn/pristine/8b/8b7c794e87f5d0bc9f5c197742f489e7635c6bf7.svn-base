#import <Foundation/Foundation.h>

/*!
 @class
 @abstract 继承UITextField，改变Placeholder字体颜色和大小
 */
@interface BaseTextField : UITextField<UITextFieldDelegate>

/*!
 @method drawPlaceholderInRect
 @abstract 重写drawPlaceholderInRect方法
 @discussion 重写drawPlaceholderInRect方法，主要是改变Placeholder字体颜色，和位置
 @param rect
 @result 无
 */
- (void)drawPlaceholderInRect:(CGRect)rect;

@end
